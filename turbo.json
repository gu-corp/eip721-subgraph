{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["codegen", "^build"],
      "outputs": ["build/**", "dist/**"],
      "cache": true
    },
    "codegen": {
      "outputs": ["generated/**", "src/types/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["codegen"],
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["codegen"],
      "outputs": [],
      "cache": true
    }
  }
}
